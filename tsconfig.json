{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
